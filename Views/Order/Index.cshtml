@model IEnumerable<E_commerce_Website.Models.Order>

<h1>Order List</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Cart ID</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CartId</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("Edit", "Order", new { id = order.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Order", new { id = order.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Order")" class="btn btn-success mt-3">Add New Order</a>
