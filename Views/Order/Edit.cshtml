@model E_commerce_Website.Models.Order

<h1>Edit Order</h1>

<form method="post">
    <div class="form-group">
        <label for="CartId">Cart ID</label>
        <input type="number" id="CartId" name="CartId" class="form-control" value="@Model.CartId" required />
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <input type="text" id="Status" name="Status" class="form-control" value="@Model.Status" required />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
