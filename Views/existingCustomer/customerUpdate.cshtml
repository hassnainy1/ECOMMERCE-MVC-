@model customer

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Customer details</h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
    </div>
    <form method="post" enctype="multipart/form-data" asp-action="customerUpdate">
        <input type="hidden" value="@Model.customer_Id" name="customer_id" class="form-control my-3" />
        <input type="text" value="@Model.customer_name" name="customer_name" class="form-control my-3" />
        <div class="form-group">
            <label asp-for="customer_eamil"></label>
            <input asp-for="customer_eamil" class="form-control my-3" />
            <span asp-validation-for="customer_eamil" class="text-danger"></span>
        </div>
        <input type="password" value="@Model.customer_password" name="customer_password " class=" form-control my-3" />

        <input type="text" value="@Model.customer_gender" name="customer_gender" class="form-control my-3" />
        <input type="text" value="@Model.customer_phone" name="customer_phone" class="form-control my-3" />
        <input type="text" value="@Model.customer_country" name="customer_country" class="form-control my-3" />
        <input type="text" value="@Model.customer_city" name="customer_city" class="form-control my-3" />
        <input type="text" value="@Model.customer_address" name="customer_address" class="form-control my-3" />
        <input type="file" name="customer_image" class="form-control my-3" />
        <input type="submit" value="Update Customwe" class="form-control my-3 btn btn-primary">
    </form>
