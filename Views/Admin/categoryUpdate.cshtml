<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Update Categories</h2>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post">
            <input type="hidden" name="category_Id" value="@Model.category_Id" />
            <input type="text" name="category_Name" class="form-control my-2" value="@Model.category_Name" />
            <input type="submit" value="Update Category" class="form-control my-3 btn btn-primary">
        </form>
    </div>
</div>
