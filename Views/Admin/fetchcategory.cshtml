@model List<category>

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">All Categories</h2>
</div>

<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("addcategory", "Admin")" class="btn btn-primary mb-3">Add New Category</a>
        <table class="table table-bordered table-striped text-center mt-2">
            <thead class="table-dark">
                <tr>
                    <th>Category Id</th>
                    <th>Category Name</th>
                    <th>Options</th> <!-- Fixed placement -->
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.category_Id</td>
                        <td>@cat.category_Name</td>
                        <td>
                            <a href="@Url.Action("categoryUpdate", "Admin", new { id = cat.category_Id })" class="btn btn-warning btn-sm">Update</a>
                            <a href="@Url.Action("DeletePermissioncategory", "Admin", new { id = cat.category_Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
